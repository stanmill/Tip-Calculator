<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.stanleypena.tipcalculator.MainActivity">

    <EditText
        android:id="@+id/enter_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:maxLength="6"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/view_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_row="0"
        android:hint="@string/enter_an_amount"
        android:labelFor="@id/enter_amount"
        android:paddingTop="20dp"
        android:textAlignment="center" />

    <SeekBar
        android:id="@+id/tip_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_row="1"
        android:paddingBottom="30dp"
        android:paddingTop="60dp" />

    <TextView
        android:id="@+id/tip_label1"
        android:layout_width="82dp"
        android:layout_height="38dp"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_row="1"
        android:paddingBottom="30dp"
        android:paddingTop="60dp"
        android:text="Tip"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tip_label2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_margin="5dp"
        android:layout_row="2"
        android:text="Tip"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tip_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_margin="5dp"
        android:layout_row="2"
        android:background="@android:color/holo_orange_light"
        android:text="$0.00"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_row="3"
        android:text="Total"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_margin="5dp"
       />

    <TextView
        android:id="@+id/total_after_tax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_margin="5dp"
        android:layout_row="3"
        android:background="@android:color/holo_orange_light"
        android:text="$0.00"
        android:textAlignment="center"
        android:textStyle="bold" />
</GridLayout>
